<article class="row">
    <section class="col-sm-10">
        <div class="progress">
            <div class="progress-bar progress-bar-striped active" {{bind-attr style=styleWidth}}>
               {{name}} {{format-interval time}}
            </div>
        </div>
    </section>
    <section class="col-sm-2 text-right">
        <button {{action "stop"}} class="btn  btn-primary" {{bindAttr disabled="disabled"}} class="col-xs-12">
            <span class="glyphicon glyphicon-stop"></span>
            Stop
        </button>
    </section>
</article>